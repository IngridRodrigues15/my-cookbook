<h1><%= @recipe_type.name %></h1>

<% if @recipes.empty? %>
    Nenhuma receita encontrada para este tipo de receitas
<% end %>

<% @recipes.each do |recipe| %>
    <h1><%= recipe.title %></h1>
    <ul>
        <li><%= recipe.recipe_type %></li>
        <li><%= recipe.cuisine %></li>
        <li><%= recipe.difficulty %></li>
        <li><%= recipe.cook_time %> minutos</li>
    </ul>
<% end %>