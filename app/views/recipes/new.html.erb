<%= render "home/header" %>

<%= form_for @recipe, url: {action: "create"} do |f| %>

  <% if @recipe.errors.any? %>
    <% @recipe.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>

  <%= f.label :title, "TÃ­tulo" %>
  <%= f.text_field :title, :required => true %>

  <%= f.label :recipe_type_id, "Tipo da Receita" %>
  <%= f.collection_select(:recipe_type_id, RecipeType.all, :id, :name) %>

  <%= f.label :cuisine_id, "Cozinha" %>
  <%= f.collection_select(:cuisine_id, Cuisine.all, :id, :name) %>

  <%= f.label :portion, "Quantas pessoas serve" %>
  <%= f.number_field :portion %>

  <%= f.label :cook_time, "Tempo de Preparo" %>
  <%= f.number_field :cook_time, :required => true, placeholder: "minutos" %>

  <%= f.label :difficulty, "Dificuldade" %>
  <%= f.text_field :difficulty, :required => true %>
 
  <%= f.label :ingredients, "Ingredientes" %>
  <%= f.text_area :ingredients, :required => true %>

  <%= f.label :method, "Como Preparar" %>
  <%= f.text_area :method, :required => true %>

  <%= f.submit "Enviar" %>
<% end %>

<%= render "home/footer" %>
